<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="showNewsForm" type="com.epam.chadov.task1.presentation.form.ShowNewsForm"/>
    </form-beans>

    <action-mappings>
        <action path="/newsAction"
                type="com.epam.chadov.task1.presentation.actions.NewsAction"
                parameter="action"
                name="showNewsForm"
        >
            <forward name="success" path="/main.jsp"/>
            <forward name="edit_list" path="/pages/edit_page.jsp"/>
        </action>


        <action path="/Locale"
                type="com.epam.chadov.task1.presentation.actions.SetLocale"
                parameter="action"
                name="showNewsForm"
        >
            <forward name="success" path="/main.jsp"/>
        </action>
    </action-mappings>

    <!--<controller>-->
        <!--<set-property property="processorClass" value="org.springframework.web.struts.AutowiringRequestProcessor" />-->
    <!--</controller>-->

    <message-resources parameter="messages"/>


    <!-- Tiles plugin -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config"
                      value="/WEB-INF/tiles-defs.xml"/>

    </plug-in>

    <!--Spring 4 plugin-->
    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="classpath:spring-config.xml"/>
    </plug-in>

</struts-config>
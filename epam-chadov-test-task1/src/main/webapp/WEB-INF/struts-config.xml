<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="showNewsForm" type="com.epam.chadov.task1.presentation.form.ShowNewsForm"/>
    </form-beans>
    <action-mappings>
        <action path="/newsAction"
                type="com.epam.chadov.task1.presentation.action.NewsAction"
                parameter="action"
        >
        <forward name="success" path="/pages/showNews.jsp"/>
        </action>
    </action-mappings>
</struts-config>